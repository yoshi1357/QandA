<div id="index" class="text-center row">
  <div class="col-md-12">
    <hr>
    <% @questions.each do |question| %>
      <dt><h4><%= link_to question.title,question_path(question) %></h4></dt>
      <dd>投稿日時: <%= question.created_at %></dd>
      <dd>[ <%= link_to '編集', edit_question_path(question) %> ] [ <%= link_to '消去', question_path(question), method: :delete, data: {confirm: 'Are you sure?'} %> ]</dd>
      <hr>
    <% end %>
    <div>
      <%= link_to '新規質問投稿画面へ', new_question_path  %>
    </div>
  </div>
  <!--#ページネーションを表示したいところへ-->
  <section class="mx-auto mt-4"><%= paginate @questions %></section>

</div>













