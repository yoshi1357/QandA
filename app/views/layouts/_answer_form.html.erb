<%= form_with model: [question,answer], id: 'answer-form' do |f|  %>

  <%= render partial: 'layouts/error_messages', locals: {model: f.object} %>
  <div class="js-message-errors"></div>

  <%= f.hidden_field :question_id, {value: @question.id} %>
  <%= f.hidden_field :user_id, {value: current_user.id} %>


  <div class="form-group">
    <label>回答</label>
    <%= f.text_area :content, class: "form-control", size: "30x10" %>
  </div>

  <div class="text-center">
    <%= f.submit "回答を投稿", class: "btn btn-primary" %>
  </div>
<% end %>