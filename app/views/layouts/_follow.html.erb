<% unless current_user == question.user %>
  <% if question.user.followed_by?(current_user) %>
    <%= link_to(user_follows_path(question.user,id: @question.id), method: :delete, remote: true) do %>
      <i class="fa fa-heart"></i>
    <% end %>
  <% else %>
    <%= link_to(user_follows_path(question.user,id: @question.id), method: :post, remote: true) do %>
      <i class="fa fa-heart-o"></i>
    <% end %>
  <% end %>
  <%= question.user.passive_relationships.length %>
<% end %>