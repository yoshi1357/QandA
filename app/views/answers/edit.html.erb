<% provide :title, set_title("回答編集")  %>

<div id="edit-answer" class="container">
  <!--パンくずリスト-->
  <ol class="breadcrumb">
   <li class="breadcrumb-item"><a href="/">HOME</a></li>
   <li class="breadcrumb-item"><%= link_to "質問詳細", question_path(@question)  %></li>
   <li class="breadcrumb-item active">回答編集</li>
  </ol>

  <div class="row">
    <main class="col-md-8">
      <div class="p-4">
        <h2 class="text-center">回答を編集</h2>
        <%= form_with model: [@question, @answer], local: true do |f| %>
          <div class="form-group">
            <label>名前</label>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group">
            <label>回答</label>
            <%= f.text_area :content, class: "form-control", size: "30x10" %>
          </div>

          <div class="text-center">
            <%= f.submit "編集", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </main>

    <%= render 'aside' %>

  </div>
</div>


